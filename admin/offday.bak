// Initialize messages
$message = "";
$message_type = ""; // "success" or "error"

// Handle the maintenance mode toggle request
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['status'])) {
    $status = intval($_POST['status']);

    $query = $con->prepare("UPDATE tblsettings SET maintenance_mode = ?");
    if ($query === false) {
        die("MySQL prepare statement error: " . $con->error);
    }

    $query->bind_param("i", $status);
    if (!$query->execute()) {
        $message = "Error updating maintenance mode.";
        $message_type = "error";
    }
    $query->close();
    exit;
}

// Handle day off insertion
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['title'])) {
    $title = trim($_POST['title']);
    $start_date = $_POST['start_date'];
    $end_date = $_POST['end_date'];

    if (empty($title) || empty($start_date) || empty($end_date)) {
        $message = "All fields are required.";
        $message_type = "error";
    } else {
        $query = $con->prepare("INSERT INTO tbldayoffs (title, start_date, end_date) VALUES (?, ?, ?)");
        if ($query === false) {
            $message = "MySQL prepare statement error: " . $con->error;
            $message_type = "error";
        } else {
            $query->bind_param("sss", $title, $start_date, $end_date);
            if (!$query->execute()) {
                $message = "MySQL execution error: " . $query->error;
                $message_type = "error";
            } else {
                $message = "Day off added successfully!";
                $message_type = "success";
            }
            $query->close();
        }
    }
}

// Fetch the current maintenance mode status
$query = $con->prepare("SELECT maintenance_mode FROM tblsettings LIMIT 1");
$query->execute();
$query->bind_result($maintenance_mode);
$query->fetch();
$query->close();
?>

